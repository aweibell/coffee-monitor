{
  "roastery": {
    "name": "Stavanger Kaffebrenneri",
    "baseUrl": "https://stavangerkaffebrenneri.no/",
    "shopUrls": [
      {
        "url": "https://www.stavangerkaffebrenneri.no/categories/kun-okologisk-kaffe",
        "metadata": {
          "organic": true,
          "category": "all_sizes",
          "description": "Organic coffee - all sizes"
        }
      },
      {
        "url": "https://www.stavangerkaffebrenneri.no/categories/kaffe-1000g",
        "metadata": {
          "organic": false,
          "category": "1kg",
          "description": "All coffee - 1kg packages"
        }
      }
    ],
    "selectors": {
      "productContainer": ".product",
      "name": ".title",
      "price": ".price",
      "description": "",
      "link": "a",
      "availability": ""
    }
  },
  "monitoring": {
    "checkInterval": "0 9 * * *",
    "maxRetries": 3,
    "requestTimeout": 30000,
    "screenshotOnError": true
  },
  "notifications": {
    "email": {
      "enabled": true,
      "smtp": {
        "host": "smtp.gmail.com",
        "port": 587,
        "secure": false,
        "auth": {
          "user": "your-email@gmail.com",
          "pass": "your-app-password"
        }
      },
      "from": "your-email@gmail.com",
      "to": ["recipient@example.com"],
      "subject": "☕ [coffee-monitor] Your favorite coffee is available!"
    },
    "desktop": {
      "enabled": true,
      "title": "Coffee Monitor",
      "sound": true
    },
    "telegram": {
      "enabled": true,
      "title": "Coffee Monitor",
      "sound": true
    }
  },
  "favorites": [
    {
      "pattern": "Etiopia",
      "description": "Etiopisk kaffi (Note: Favorites are now managed via CLI with multiple terms support)"
    },
    {
      "pattern": "Koffeinfri", 
      "description": "Koffeinfri kaffi"
    },
    {
      "pattern": "Bærtørket",
      "description": "Natural processed coffees"
    }
  ],
  "database": {
    "path": "./data/coffee.db"
  },
  "logging": {
    "level": "info",
    "file": "./logs/coffee-monitor.log",
    "maxSize": "10MB",
    "maxFiles": 5
  }
}